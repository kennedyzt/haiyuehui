<@insert template="layout/layer">
    <div class="add_page">
        <div class="bank_text_div common_text_div"></div>
        <div class="bank_text_div common_text_div"></div>
        <div class="bank_text_div common_text_div">
            <div class="common_text_title"><span data-required="true">库区编码</span></div>
